/* miniprogram/pages/article/article.wxss */
@import "./article.skeleton.wxss";
.article-box {
  padding: 30rpx 30rpx 50rpx 30rpx;
  background: #fff;
  color: #003159;
}

.article-box .article-title {
  font-size: 36rpx;
  padding-bottom: 12rpx;
  border-bottom: 1rpx solid #eaeaea;
}

.article-box .info-time {
  margin-top: 8rpx;
  margin-bottom: 30rpx;
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
}

.article-box .article-cover {
  width: 100%;
  margin-bottom: 30rpx;
}

.share-btn {
  border-radius: 50%;
  font-size: 24rpx;
  width: 140rpx!important;
  height: 140rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 50rpx 0 0 0;
  color: #fff;
  font-weight: normal;
  background-color: #07c160;
}